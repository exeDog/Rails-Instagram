<div class="row justify-content-md-center profile-wrapper">
  <div class="col-md-4 text-center">
    <%= image_tag @user.image, width: '152', height: '152', class: 'round-img' %>
  </div>
  <div class="col-md-8">
    <div class="row">
      <p class="username">
        <%= @user.name %>
      </p>
      <button class="btn btn-outline-dark common-btn edit-profile-btn">Edit profile</button>
    </div>
    <div class="row">
      <p class="email">
        <%= @user.email %>
      </p>
    </div>

  </div>
</div>